<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns:local="clr-namespace:HelloWorld.Extensions"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld.TableViewPage">
	<TableView Intent="Form">
        <TableRoot>
            <TableSection Title="Basics">
                <TextCell Text="Name" Detail="Mosh Hamedani" />
                <EntryCell Label="Title" Placeholder="(eg Shopping)" Keyboard="Text"/>
                <SwitchCell Text="Notifications" On="true"/>
                <local:DateCell Label="Starts" />
                <local:DateCell Label="Ends" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>